<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1D3471"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/viewid"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:textSize="35sp"
            android:textStyle="bold"
            android:background="#8FB1EC"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                        android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="30sp"
            android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonid3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonidDevision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonid4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonid5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonid6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/buttonidMultiplication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonid7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonid8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonid9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <Button
                    android:id="@+id/buttonidSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonid0"
                    android:layout_width="264dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/buttonidAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonidClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="C"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonidBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="b"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/buttonidPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="."
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonidEqual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="="
                    android:textSize="30sp"
                    android:textStyle="bold" />

        </LinearLayout>


</LinearLayout>